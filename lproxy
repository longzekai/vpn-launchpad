#/bin/sh

DIR=`dirname $0`
DIR="$(cd $DIR; pwd)"

if [[ $# = 0 ]]; then
	$DIR/bin/lproxy-status
else
	act="$1"
	case $act in
		build)
			shift
			$DIR/bin/lproxy-build $*
			;;
		status)
			shift
			$DIR/bin/lproxy-status $*
			;;
		purge)
			shift
			$DIR/bin/lproxy-purge $*
			;;
		*)
			shift
			$DIR/bin/lproxy-status $*
			;;
	esac
fi
